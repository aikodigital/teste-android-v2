<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_graph"
    app:startDestination="@id/searchHistoricFragment">

    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.cesarsoftdevelopment.aikopublictransport.ui.home.view.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps">
        <argument
            android:name="objects"
            app:argType="com.cesarsoftdevelopment.aikopublictransport.data.model.Objects"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/busLinesFragment"
        android:name="com.cesarsoftdevelopment.aikopublictransport.ui.home.view.BusLinesFragment"
        android:label="fragment_bus_lines"
        tools:layout="@layout/fragment_bus_lines" >
        <action
            android:id="@+id/action_busLinesFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchHistoricFragment"
        android:name="com.cesarsoftdevelopment.aikopublictransport.ui.home.view.SearchHistoricFragment"
        android:label="SearchHistoricFragment"
        tools:layout="@layout/fragment_search_historic"/>
    <fragment
        android:id="@+id/noInternetFragment"
        android:name="com.cesarsoftdevelopment.aikopublictransport.ui.home.view.NoInternetFragment"
        android:label="fragment_no_internet"
        tools:layout="@layout/fragment_no_internet" />
</navigation>