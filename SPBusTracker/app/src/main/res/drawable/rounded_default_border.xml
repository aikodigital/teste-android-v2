<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:height="35dp"
        android:left="0dp"
        android:right="10dp"
        android:top="10dp">
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="@color/red_sp_trans_0"
                android:endColor="@color/red_sp_trans_2"
                android:startColor="@color/red_sp_trans_clean" />
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="10dp" />/>
        </shape>
    </item>

    <item
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="45dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray" />
            <corners
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp" />
        </shape>
    </item>

</layer-list>
