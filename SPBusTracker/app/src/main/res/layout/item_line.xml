<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_default_border"
        android:padding="10dp">

        <!-- Ícone de coração no canto superior direito -->
        <ImageView
            android:id="@+id/heartIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_heart_outline"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:id="@+id/lline02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/heartIcon"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/lineTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Linha"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/lineOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Origem"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lineDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Destino"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
