<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvListForecastVehicleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ONIBUS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvListForecastTime" />

        <TextView
            android:id="@+id/tvListForecastTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10:00 para chegar"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:gravity="end"
            app:layout_constraintStart_toStartOf="@id/tvListForecastVehicleName"
            app:layout_constraintEnd_toEndOf="@id/tvListForecastVehicleName"
            app:layout_constraintTop_toBottomOf="@id/tvListForecastVehicleName"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>