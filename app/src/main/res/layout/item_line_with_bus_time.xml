<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/viewLineSinalizer"
        android:layout_width="6dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_line_sinalizer"
        app:layout_constraintBottom_toBottomOf="@+id/rvBusTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvLineSign"
        style="@style/TextMessage"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="508L-10" />

    <TextView
        android:id="@+id/tvLineDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        style="@style/Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLineSign"
        tools:text="TERMINAL PRIMARIO -> TERMINAL SECUNDARIO" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBusTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvLineDescription"
        android:layout_marginTop="8dp"
        tools:listitem="@layout/item_bus_time"
        tools:itemCount="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>