    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/card_border"
        android:padding="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp" android:tag="layout/line_search_result_card_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#073B4C"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Bus Icon -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Vehicle Prefix -->
                    <TextView
                        android:id="@+id/tv_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                              
                        android:textColor="#caf0f8"
                        android:textSize="16sp"
                        android:textStyle="bold"  android:tag="binding_1"/>

                    <!-- Arrival Time -->
                    <TextView
                        android:id="@+id/tv_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                              
                        android:textColor="#caf0f8"
                        android:textSize="16sp"
                        android:textStyle="bold"  android:tag="binding_2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Vehicle Prefix -->
                    <TextView
                        android:id="@+id/tv_terminals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:ellipsize="marquee"
                        android:tag="binding_3"                                                       
                        android:textColor="#caf0f8"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <ImageView
                id="@+id/iv_circular"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/icon_frame"
                android:padding="12dp"
                android:tag="binding_4"                              
                android:src="@drawable/arrows_rotate" />

            <ImageView
                id="@+id/iv_forward"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/icon_frame"
                android:padding="12dp"
                android:tag="binding_5"                              
                android:src="@drawable/arrow_forward" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
         